@model ProjectOrganizer.Models.ViewModels.LoginViewModel;
@{

	Layout = null;
	ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="body" >
	<div class="container" style="max-width:450px!important">
		<main role="main">

			<div class="bg-light shadow" style="border-radius:3px; margin-top:26vh;background:#fff!important" >
				<div class="login d-flex align-items-center py-4">
					<div class="container text-dark">
						<div class="row">
							<div class="col-lg-10 mx-auto">
								<h3 class="mb-3">Sign in</h3>
								<form asp-controller="Auth" asp-action="Login" method="post">
									<input type="hidden" asp-for="ReturnUrl" />
									<div class="form-group mb-3">
										<label>Username</label>
										<input asp-for="Username" required="" autofocus="" class="form-control">
										<span asp-validation-for="Username"></span>
									</div>
									<div class="form-group mb-4">
										<label>Password</label>
										<input asp-for="Password" type="password" required="" class="form-control">
										<span asp-validation-for="Password"></span>
										<a asp-controller="Auth" asp-action="Register" asp-route-returnUrl="@Model.ReturnUrl" style="text-align:center!important; font-size:13px">Forgot your password?</a>
									</div>
									<button type="submit" class="btn btn-primary btn-block  mb-2" style=" font-weight: 500;">Sign in</button>
									<div class="mb-2 text-center">or</div>
								</form>
								<form asp-controller="Auth" asp-action="ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" asp-route-provider="Google" method="post">
									<button type="submit" class="btn btn-google btn-block  mb-2"><img src="~/images/google-logo.png" style="height:22px; float:left;" />Continue with Google</button>
								</form>
								<form asp-controller="Auth" asp-action="ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" asp-route-provider="Microsoft" method="post">
									<button type="submit" class="btn btn-google btn-block  mb-2"><img src="~/images/microsoft_logo.png" style="height:22px; float:left;" />Continue with Microsoft</button>
								</form>
								<a asp-controller="Auth" asp-action="Register" asp-route-returnUrl="@Model.ReturnUrl" style="display:block; text-align:center!important;margin-top:20px">No Account? Register</a>
							</div>
						</div>
					</div>

				</div>

			</div>
		</main>
	</div>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>

</body>
</html>

<style>
	.btn-google {
		color: #3e3e3e;
		border-color: #bfbebe!important;
		border: solid;
		border-width: 1px;
		font-weight: 500;
	}

		.btn-google:hover {
			background: #d8d8d8;
		}
	.body {
		background: #335dff;
	}
	.login {
		min-height: 60%;
	}
</style>
