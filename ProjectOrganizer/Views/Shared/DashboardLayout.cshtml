<script>

	function getProfileInfo() {
		$.post("/Account/GetUser/",
			{
			},
			function (data) {
				profileInfo = JSON.parse(data.responseText);
				document.getElementById('profileBoxText').innerHTML = profileInfo.Username.charAt(0).toUpperCase();
				document.getElementById('accountLink').href = 'https://localhost:44343/Account?username=' + profileInfo.Username;
			});
	}

	getProfileInfo();
</script>

